<h1>Edit Menu Item</h1>

<%= form_for [:admin, @menu_item] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>

  <%= f.label :price %>:
  <%= f.text_field :price %><br>

  <%= f.label :description %>:
  <%= f.text_field :description %><br>

  <%= f.label :vegetarian %>:
  <%= f.check_box :vegetarian %><br>

  <%= f.label :picture %>:
  <%= f.file_field :picture %>

  <%= f.submit %>
<% end %>
